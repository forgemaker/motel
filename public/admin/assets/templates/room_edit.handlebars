<article class="module width_full">
<div style="width:97%;margin:0 auto;">
    <div class="menu">
        <a class="btn btn-primary" data-model="room" href="#!/room/list/{{motel_id}}" style="color: white;"><i class="icon-list"></i> 檢視房型列表</a>
    </div>
    <ul id="mytab" class="nav nav-tabs">
        <li class="active"><a href="#profile" data-toggle="tab">房型資料</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="profile">
            <form action="#" method="post" class="well" id="room_add_form">
                {{#is_edit}}
                <div class="alert alert-info">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    建立日期為 {{date_time created_on}}
                </div>
                {{/is_edit}}
                <div class="form-group">
                    <label class="control-label">房型名稱</label>
                    <input type="text" name="title" class="form-control" placeholder="請輸入房型名稱" value="{{title}}">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">休息原價</label>
                    <input type="text" name="rest_1_price" class="form-control" placeholder="休息原價" value="{{rest_1_price}}">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">平日休息特價</label>
                    <input type="text" name="rest_2_price" class="form-control" placeholder="平日休息特價" value="{{rest_2_price}}">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">假日休息特價</label>
                    <input type="text" name="rest_3_price" class="form-control" placeholder="假日休息特價" value="{{rest_3_price}}">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">住宿原價</label>
                    <input type="text" name="rest_1_price" class="form-control" placeholder="住宿原價" value="{{stay_1_price}}">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">平日住宿特價</label>
                    <input type="text" name="rest_2_price" class="form-control" placeholder="平日住宿特價" value="{{stay_2_price}}">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">假日住宿特價</label>
                    <input type="text" name="rest_3_price" class="form-control" placeholder="假日住宿特價" value="{{stay_3_price}}">
                    <span class="help-block"></span>
                </div>
                <p class="help-block">*上面欄位務必填寫.</p>
                {{#is_edit}}
                    <input type="hidden" name="id" value="{{id}}">
                {{/is_edit}}
                <button type="button" data-form="#room_add_form" {{#is_edit}}data-id="{{id}}"{{/is_edit}} data-model="room" class="btn btn-primary {{^is_edit}}add{{/is_edit}}{{#is_edit}}edit{{/is_edit}}">{{^is_edit}}建立房型{{/is_edit}}{{#is_edit}}編輯房型{{/is_edit}}</button>
                <button class="btn" type="reset">{{^is_edit}}重新填寫{{/is_edit}}{{#is_edit}}取消編輯{{/is_edit}}</button>
            </form>
        </div>
    </div>
</div>
</article>
<script>
(function($){
    $('#myTab').tab('show');
    $('a[data-toggle="tab"]').on('shown', function (e) {
        console.log(e);
        console.log(e.target.hash); // activated tab
        console.log(e.relatedTarget.hash); // previous tab
    });
}(jQuery));
</script>
