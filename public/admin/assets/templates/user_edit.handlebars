<article class="module width_full">
<div style="width:97%;margin:0 auto;">
    <div class="menu">
        <a class="btn btn-primary" data-model="user" href="#!/user/list" style="color: white;"><i class="icon-list icon-white"></i> 檢視帳號列表</a>
    </div>
    <ul id="mytab" class="nav nav-tabs">
        <li class="active"><a href="#profile" data-toggle="tab">個人資料</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="profile">
            <form action="#" method="post" class="well" id="user_add_form">
                <div class="form-group">
                    <label class="control-label">登入帳號</label>
                    <input type="text" name="username" class="form-control" placeholder="Please enter user email" value="{{username}}">
                    <span class="help-block">僅支援英文+數字帳號</span>
                </div>
                <div class="form-group">
                    <label class="control-label">{{^is_edit}}登入密碼{{/is_edit}}{{#is_edit}}修改密碼{{/is_edit}}</label>
                    <input type="password" name="password" class="form-control" placeholder="Please enter password">
                    <p class="help-block">{{#is_edit}}不需要修改密碼，請留空白{{/is_edit}}</p>
                </div>
                <div class="form-group">
                    <label class="control-label">確認密碼</label>
                    <input type="password" name="confirm_password" class="form-control" placeholder="Confirm Password">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">名字(First name)</label>
                    <input type="text" name="first_name" class="form-control" placeholder="Please enter user first name" value="{{first_name}}">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">姓氏(Last name)</label>
                    <input type="text" name="last_name" class="form-control" placeholder="Please enter user last name" value="{{last_name}}">
                    <span class="help-block"></span>
                </div>
                {{#is_edit}}
                <div class="form-group">
                    <label class="control-label">群組:</label>
                    <div class="controls">
                        {{#all_groups}}
                        <label class="checkbox">
                            <input type="checkbox" name="user_groups[]" value="{{id}}" {{group_active active}} />{{description}}
                        </label>
                        {{/all_groups}}
                    </div>
                </div>
                {{/is_edit}}
                <p class="help-block">*上面欄位務必填寫.</p>
                {{#is_edit}}
                    <input type="hidden" name="id" value="{{id}}">
                {{/is_edit}}
                <button type="button" {{#is_edit}}data-id="{{id}}"{{/is_edit}} data-model="user" class="btn btn-primary {{^is_edit}}add{{/is_edit}}{{#is_edit}}edit{{/is_edit}}">{{^is_edit}}建立帳號{{/is_edit}}{{#is_edit}}編輯帳號{{/is_edit}}</button>
                <button class="btn" type="reset">{{^is_edit}}重新填寫{{/is_edit}}{{#is_edit}}取消編輯{{/is_edit}}</button>
            </form>
        </div>
        {{#is_edit}}
        <div class="tab-pane" id="software">
            <form action="#" method="post" class="well" id="app_lists_form">
                <div class="menu menu_left">
                    <a class="btn btn-primary add_apps" data-form="#app_lists_form" style="color: white;"><i class="icon-edit icon-white"></i> 新增軟體</a>
                </div>
                <p style="clear:both;">&nbsp;</p>
                <div id="app_list">
                </div>
                <p style="clear:both;">&nbsp;</p>
                <input type="hidden" name="user_id" value="{{id}}">
            </form>
        </div>
        <div class="tab-pane" id="user_apps">
            <form action="#" method="post" class="well" id="user_apps_form">
                <div class="menu menu_left">
                    <a class="btn btn-danger delete_apps" data-form="#user_apps_form" style="color: white;"><i class="icon-edit icon-white"></i> 刪除軟體</a>
                </div>
                <div id="user_app_list">
                {{#apps}}
                <div style="float:left; width:150px; height:150px; margin: 0 auto; text-align: center">
                    <img src="{{app_cover}}" width="100" /><br />
                    {{app_title}}<br />
                    <input type="checkbox" name="id[]" value="{{id}}" />
                </div>
                {{/apps}}
                </div>
                <p style="clear:both;">&nbsp;</p>
            </form>
        </div>
        {{/is_edit}}
    </div>
</div>
</article>
