<article class="module width_full">
<div style="width:97%;margin:0 auto;">

    <div class="menu">
        <a class="btn btn-primary search_log" data-form="#log_list_form" data-model="log" style="color: white;"><i class="icon-ok icon-white"></i> 搜尋列表</a>
        <a class="btn btn-primary check_all" data-model="log" style="color: white;"><i class="icon-ok icon-white"></i> 全選列表</a>
        <a class="btn btn-danger delete_all" data-form="#log_list_form" data-model="log" style="color: white;"><i class="icon-trash icon-white"></i> 刪除紀錄</a>
    </div>
    <ul class="pager">
        {{#previous_show}}
        <li class="previous">
            <a href="#!/log/list/1" style="margin-right: 10px;">&larr; 第一頁</a>
        </li>
        <li class="previous">
            <a href="#!/log/list/{{previous_page}}">&larr; 上一頁</a>
        </li>
        {{/previous_show}}
        {{#next_show}}
        <li class="next">
            <a href="#!/log/list/{{next_page}}">下一頁 &rarr;</a>
        </li>
        {{/next_show}}
    </ul>
    <form action="#" method="post" id="log_list_form">
    <table id="log_list" class="table table-striped table-bordered table-condensed tablesorter">
        <thead>
            <tr>
                <th style="width: 10px">&nbsp;</th>
                <th>使用者</th>
                <th>網址</th>
                <th style="width: 50px">行號</th>
                <th>瀏覽器</th>
                <th>訊息</th>
                <th style="width: 150px">建立日期</th>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td><input type="text" name="url" value="{{url}}" placeholder="search url" class="span4" /></td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td><input type="text" name="message" value="{{message}}" placeholder="search message" class="span4" /></td>
                <td>&nbsp;</td>
            </tr>
        </thead>
        <tbody>
        {{#items}}
        <tr>
            <td><input type="checkbox" name="id[]" value="{{id}}"></td>
            <td><a href="#!/user/edit/{{user_id}}">{{user_id}}</a></td>
            <td>{{{search_url url}}}</td>
            <td>{{line}}</td>
            <td>{{user_agent}}</td>
            <td>{{{search_message message}}}</td>
            <td>{{date_time add_time}}</td>
        </tr>
        {{/items}}
        </tbody>
    </table>
    </form>
</div>
</article>
