<article class="module width_full">
<div style="width:98%;margin:0 auto;">
    <div class="menu">
        <a class="btn btn-primary check_all" data-model="user" style="color: white;"><i class="icon-ok"></i> 全選列表</a>
        <a class="btn btn-primary" data-model="user" href="#!/user/add" style="color: white;"><i class="icon-edit"></i> 新增帳號</a>
        <a class="btn btn-danger delete_all" data-form="#user_list_form" data-model="user" style="color: white;"><i class="icon-trash"></i> 刪除帳號</a>
    </div>
    <ul class="pager">
        {{#previous_show}}
        <li class="previous">
            <a href="#!/user/list/1" style="margin-right: 10px;">&larr; 第一頁</a>
        </li>
        <li class="previous">
            <a href="#!/user/list/{{previous_page}}">&larr; 上一頁</a>
        </li>
        {{/previous_show}}
        {{#next_show}}
        <li class="next">
            <a href="#!/user/list/{{next_page}}">下一頁 &rarr;</a>
        </li>
        {{/next_show}}
    </ul>
    <form action="#" method="post" id="user_list_form">
    <div class="table-responsive">
    <table id="user_list" class="table table-striped table-bordered table-condensed tablesorter">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>編號</th>
                <th>名字</th>
                <th>姓氏</th>
                <th>帳號</th>
                <th>建立日期</th>
                <th>最後登入</th>
                <th>動作</th>
            </tr>
        </thead>
        <tbody>
        {{#items}}
        <tr>
            <td><input type="checkbox" name="id[]" value="{{id}}"></td>
            <td>{{id}}</td>
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td>{{username}}</td>
            <td>{{date_time created_on}}</td>
            <td>{{date_time last_login}}</td>
            <td>
                <a class="btn btn-primary" data-model="user" data-id="{{id}}" href="#!/user/edit/{{id}}" style="color: white;"><i class="icon-edit"></i> 編輯</a>&nbsp;
                <a class="btn btn-danger delete" data-model="user" data-title="{{username}}" data-id="{{id}}" href="#" style="color: white;"><i class="icon-trash"></i> 刪除</a>
            </td>
        </tr>
        {{/items}}
        </tbody>
    </table>
    </div>
    </form>
</div>
</article>
