<article class="module width_full">
<div style="width:97%;margin:0 auto;">

    <div class="menu">
        <a class="btn btn-primary search_motel" data-form="#motel_list_form" data-model="motel" style="color: white;"><i class="icon-search"></i> 搜尋列表</a>
        <a class="btn btn-primary check_all" data-model="motel" style="color: white;"><i class="icon-ok"></i> 全選列表</a>
        <a class="btn btn-primary" data-model="motel" href="#!/motel/add" style="color: white;"><i class="icon-edit"></i> 新增摩鐵</a>
        <a class="btn btn-danger delete_all" data-form="#motel_list_form" data-model="motel" style="color: white;"><i class="icon-trash"></i> 刪除摩鐵</a>
    </div>
    <ul class="pager">
        {{#previous_show}}
        <li class="previous">
            <a href="#!/motel/list/1" style="margin-right: 10px;">&larr; 第一頁</a>
        </li>
        <li class="previous">
            <a href="#!/motel/list/{{previous_page}}">&larr; 上一頁</a>
        </li>
        {{/previous_show}}
        {{#next_show}}
        <li class="next">
            <a href="#!/motel/list/{{next_page}}">下一頁 &rarr;</a>
        </li>
        {{/next_show}}
    </ul>
    <form action="#" method="post" id="motel_list_form">
        <div class="table-responsive">
            <table id="motel_list" class="table table-striped table-bordered table-condensed tablesorter">
                <thead>
                    <tr>
                        <th>&nbsp;</th>
                        <th>編號</th>
                        <th>名稱</th>
                        <th>縣市</th>
                        <th>聯絡人員</th>
                        <th>室內電話</th>
                        <th>行動電話</th>
                        <th>建立日期</th>
                        <th>動作</th>
                    </tr>
                </thead>
                {{#items}}
                <tr>
                    <td><input type="checkbox" name="id[]" value="{{id}}"></td>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{county}}{{district}}</td>
                    <td>{{contact}}</td>
                    <td>{{phone_1}}</td>
                    <td>{{mobile_1}}</td>
                    <td>{{date_time add_time}}</td>
                    <td>
                        <a class="btn btn-primary" data-model="motel" data-id="{{id}}" href="#!/room/list/{{id}}" style="color: white;"><i class="icon-bell"></i> 房型</a>&nbsp;
                        <a class="btn btn-primary" data-model="motel" data-id="{{id}}" href="#!/motel/edit/{{id}}" style="color: white;"><i class="icon-edit"></i> 編輯</a>&nbsp;
                        <a class="btn btn-danger delete" data-model="motel" data-title="{{title}}" data-id="{{id}}" href="#" style="color: white;"><i class="icon-trash"></i> 刪除</a>
                    </td>
                </tr>
                {{/items}}
                </tbody>
            </table>
        </div>
    </form>
</div>
</article>
