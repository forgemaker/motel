<article class="module width_full">
<div style="width:98%;margin:0 auto;">
    <div class="menu">
        <a class="btn btn-primary check_all" data-model="order" style="color: white;"><i class="icon-ok"></i> 全選列表</a>
        <a class="btn btn-primary" data-model="order" href="#!/order/add/{{motel_id}}" style="color: white;"><i class="icon-edit"></i> 新增訂單</a>
        <a class="btn btn-danger delete_all" data-form="#order_list_form" data-model="order" style="color: white;"><i class="icon-trash"></i> 刪除訂單</a>
    </div>
    <ul class="pager">
        {{#previous_show}}
        <li class="previous">
            <a href="#!/order/list/1" style="margin-right: 10px;">&larr; 第一頁</a>
        </li>
        <li class="previous">
            <a href="#!/order/list/{{previous_page}}">&larr; 上一頁</a>
        </li>
        {{/previous_show}}
        {{#next_show}}
        <li class="next">
            <a href="#!/order/list/{{next_page}}">下一頁 &rarr;</a>
        </li>
        {{/next_show}}
    </ul>
    <form action="#" method="post" id="order_list_form">
    <div class="table-responsive">
    <table id="order_list" class="table table-striped table-bordered table-condensed tablesorter">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>訂單編號</th>
                <th>房型</th>
                <th>休息/住宿</th>
                <th>下單時間</th>
                <th>付款完成</th>
                <th>應收金額</th>
                <th>狀態</th>
                <th>動作</th>
            </tr>
        </thead>
        <tbody>
        {{#items}}
        <tr>
            <td><input type="checkbox" name="id[]" value="{{id}}"></td>
            <td>{{serial_number}}</td>
            <td>{{room_title}}</td>
            <td>{{&room_type}}</td>
            <td>{{date_purchased}}</td>
            <td>{{date_finished}}</td>
            <td>{{total_price}}</td>
            <td>{{status}}</td>
            <td>
                {{#action}}
                <a class="btn btn-primary action" data-status="1" data-model="order" data-id="{{id}}" href="#" style="color: white;"><i class="icon-edit"></i> 進房完成</a>
                <a class="btn btn-primary action" data-status="2" data-model="order" data-id="{{id}}" href="#" style="color: white;"><i class="icon-edit"></i> 訂單取消</a>
                {{/action}}
                <a class="btn btn-primary" data-model="order" data-id="{{id}}" href="#!/order/edit/{{id}}" style="color: white;"><i class="icon-edit"></i> 編輯</a>&nbsp;
                <a class="btn btn-danger delete" data-model="order" data-title="{{title}}" data-id="{{id}}" href="#" style="color: white;"><i class="icon-trash"></i> 刪除</a>
            </td>
        </tr>
        {{/items}}
        </tbody>
    </table>
    </div>
    </form>
</div>
</article>
